{
  "name": "commit2notion",
  "description": "CLI tool to create new database item in Notion",
  "version": "0.0.1",
  "author": "Kai Fukushima <Yumemi>",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist/* && rm -rf pkg/*",
    "lint": "eslint . -c .eslintrc.json --fix",
    "pkg": "mkdir -p pkg/commit2notion/bin && pkg . --out-path pkg/commit2notion/bin  --compress Gzip"
  },
  "dependencies": {
    "@notionhq/client": "^0.1.8",
    "chalk": "^4.1.1",
    "commander": "^7.2.0",
    "date-fns": "^2.22.1",
    "dedent": "^0.7.0",
    "ini": "^2.0.0",
    "pjson": "^1.0.9",
    "prompts": "^2.4.1",
    "querystring": "^0.2.1",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/ini": "^1.3.30",
    "@types/node": "^15.12.1",
    "@types/prompts": "^2.0.12",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "pkg": "^5.2.1",
    "prettier": "^2.3.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint"
    ]
  }
}
